<html>
<head>
    <title>PCP Polytechnic - EES Test</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body style="font-family: Arial; text-align:center; margin-top:100px;">

    <h2>PCP Polytechnic</h2>
    <h3>EES Test</h3>

    <p id="notice"></p>

    <input type="email" id="email" placeholder="Enter PCP Email ID" required>

    <br><br>

    <button onclick="checkEmail()">Start Test</button>

    <p id="msg" style="color:red;"></p>

<script>
/* üîπ SET TEST START DATE & TIME (YYYY, MM-1, DD, HH, MM) */
const startTime = new Date(2026, 0, 19, 10, 0); // 19 Jan 2026, 10:00 AM
const endTime = new Date(startTime.getTime() + (48 * 60 * 60 * 1000));

const now = new Date();
const notice = document.getElementById("notice");

if (now > endTime) {
    notice.innerHTML =
        "‚ùå This test is closed. The 48-hour time limit has expired.";
    document.querySelector("button").disabled = true;
} else {
    notice.innerHTML =
        "All students of <b>D Division</b> are hereby informed that this test is <b>compulsory</b>.<br>" +
        "The test link will be closed after <b>48 hours</b>.";
}

function checkEmail() {
    let email = document.getElementById("email").value;

    if (now > endTime) {
        document.getElementById("msg").innerText =
            "Test closed. You cannot access the link.";
        return;
    }

    if (email.endsWith("@pcp@gmail.com")) {
        window.location.href = "https://forms.gle/Mjqi8hyXw7kBVh9J6";
    } else {
        document.getElementById("msg").innerText =
            "Access denied! Only PCP Polytechnic students are allowed.";
    }
}
</script>

</body>
</html>